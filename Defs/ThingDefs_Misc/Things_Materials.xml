<?xml version="1.0" encoding="utf-8" ?>

<Defs>

    <ThingDef ParentName="UglyRockBase" Name="AncientBoneBase">
        <defName>AM_AncientBone</defName>
        <label>ancient bone</label>
        <description>Ancient bone from an old creature.</description>
        <graphicData>
            <color>(126,110,70)</color>
        </graphicData>
        <statBases>
            <MaxHitPoints>1000</MaxHitPoints>
        </statBases>
        <building>
            <mineableThing>AM_ChunkAncientBone</mineableThing>
            <mineableDropChance>0.10</mineableDropChance>
            <smoothedThing>AM_SmoothedAncientBone</smoothedThing>
        </building>
    </ThingDef>

    <Thingdef ParentName="AncientBoneBase">
        <defName>AM_SmoothedAncientBone</defName>
        <label>smoothed ancient bone</label>
        <description>Ancient bone from an old creature. The surface has been polished to a smooth dry-marble like texture.</description>
        <graphicData>
            <texPath>Things/Building/Linked/AncientBoneSmooth_Atlas</texPath>
        </graphicData>
        <statBases>
            <Beauty>2</Beauty>
            <MarketValue>25</MarketValue>
        </statBases>
        <building>
            <isNaturalRock>false</isNaturalRock>
            <canBuildNonEdificesUnder>true</canBuildNonEdificesUnder>
            <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
            <smoothThing />
        </building>
        <saveCompressible>false</saveCompressible>
        <repairEffect>Repair</repairEffect>
    </Thingdef>

    <ThingDef ParentName="ChunkRockBase">
        <defName>AM_ChunkAncientBone</defName>
        <label>ancient bone chunk</label>
        <graphicData>
            <color>(126,110,70)</color>
        </graphicData>
        <statBases>
            <Mass>30</Mass>
        </statBases>
        <soundDrop>ChunkRock_Drop</soundDrop>
        <butcherProducts>
            <BlocksAncientBone>20</BlocksAncientBone>
        </butcherProducts>
    </ThingDef>

    <ThingDef ParentName="StoneBlocksBase">
        <defName>AM_BlocksAncientBone</defName>
        <label>ancient bone blocks</label>
        <description>Blocks of solid ancient bone.</description>
        <graphicData>
            <color>(126,110,70)</color>
        </graphicData>
        <statBases>
            <Mass>1.5</Mass>
            <SharpDamageMultiplier>0.3</SharpDamageMultiplier>
        </statBases>
        <stuffProps>
            <color>(126,110,70)</color>
            <soundImpactStuff>BulletImpact_Ground</soundImpactStuff>
            <soundMeleeHitSharp>MeleeHit_Stone</soundMeleeHitSharp>
            <soundMeleeHitBlunt>MeleeHit_Stone</soundMeleeHitBlunt>
            <stuffAdjective>ancient bone</stuffAdjective>
            <statFactors>
                <Beauty>1.8</Beauty>
                <MaxHitPoints>1.8</MaxHitPoints>
                <WorkToBuild>8.0</WorkToBuild>
                <WorkToMake>1.6</WorkToMake>
            </statFactors>
        </stuffProps>
    </ThingDef>

    <RecipeDef ParentName="MakeStoneBlocksBase">
        <defName>AM_Make_StoneBlocksAncientBone</defName>
        <label>make ancient bone blocks</label>
        <description>Cuts ancient bone into usable blocks.</description>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>AM_ChunkAncientBone</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>AM_ChunkAncientBone</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <BlocksAncientBone>20</BlocksAncientBone>
        </products>
    </RecipeDef>

</Defs>
